# Setting for the main key
set $mod Mod4

# Setting for the header font
font pango:Noto Sans 8

# Setting for automatic program start
    # Setting the background color for the desktop.
exec_always --no-startup-id xsetroot -solid #003760
    # Settings to switch languages - English/Russian.
exec_always setxkbmap -layout us,ru -option 'grp:alt_shift_toggle'

# Setting to adjust the volume of programs
set $refresh_i3status killall -SIGUSR1 i3status
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10% && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status

# Setting to drag the window to the desired position on the screen
    # Usage: In any area of the window, the keyboard shortcut - "Mouse + Main key".
floating_modifier $mod
    # Using: In the window title bar, hold down the left mouse button and drag to the desired location on the screen.
tiling_drag modifier titlebar

# Settings for starting the terminal
    # Usage: rxvt-unicode is opened by pressing - "Main key + Enter".
bindsym $mod+Return exec urxvt

# Settings to close the focused window.
    # Usage: Closing the focused window is done by pressing the keys - "Main key + Shift + Q".
bindsym $mod+Shift+q kill

# Start menu.
    # Usage: rofi is opened by pressing - "Main key + D".
bindsym $mod+d exec "rofi -modi drun,run -show drun"

# Settings for changing the focus of windows.
    # Usage:
        # To focus the window from the left - "Main key + J" or "Main key + ←".
        # To focus the window from the down - "Main key + K" or "Main key + ↓".
        # To focus the window from the up - "Main key + L" or "Main key + ↑".
        # To focus the window from the right - "Main key + ;" or "Main key + →".
bindsym $mod+j focus left
bindsym $mod+Left focus left
bindsym $mod+k focus down
bindsym $mod+Down focus down
bindsym $mod+l focus up
bindsym $mod+Up focus up
bindsym $mod+semicolon focus right
bindsym $mod+Right focus right

# Settings for the position of the focused window.
    # Usage:
        # To change the position of the focused window from the left - "Main key + J" or "Main key + ←".
        # To change the position of the focused window from the down - "Main key + K" or "Main key + ↓".
        # To change the position of the focused window from the up - "Main key + L" or "Main key + ↑".
        # To change the position of the focused window from the right - "Main key + ;" or "Main key + →".
bindsym $mod+Shift+j move left
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+k move down
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+l move up
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+semicolon move right
bindsym $mod+Shift+Right move right

# Settings for splitting windows.
    # Usage:
        # Splitting windows horizontally - "Main key + H".
        # Splitting windows vertically - "Main key + V".
bindsym $mod+h split h
bindsym $mod+v split v

# Setting for fullscreen mode.
    # Usage: Entry to the fullscreen mode is performed by selecting the window and pressing the key combination - "Main key + F".
bindsym $mod+f fullscreen toggle

# Settings for changing the container layout.
    # Usage:
        # To select the layout of the container - stacked, use the keyboard shortcut - "Main key + S".
        # To select the layout of the container - tabbed, use the keyboard shortcut - "Main key + W".
        # To select the layout of the container - splitted, use the keyboard shortcut - "Main key + E".
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# Setting mode for windows
    # There are two modes to choose - tiling and floating.
        # Usage: Switching between modes is done using the key combination - "Main key + Shift + Space".
bindsym $mod+Shift+space floating toggle

# Setting the focus of the mode for windows
    # There are two modes to choose - tiling and floating.
        # Usage: Switching between modes is done using the key combination - "Main key + Space".
bindsym $mod+space focus mode_toggle

# Setting to focus the window
    # There are two modes to choose - all windows and one window.
        # Usage: To select all windows in the container by keyboard shortcut - "Main key + A".
        # Usage: To select one window in the container by keyboard shortcut - - "Main key + C".
bindsym $mod+a focus parent
bindsym $mod+с focus child

# Settings of names for the workspace
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# Settings for switching between workspaces
    # To switch between workspaces, use the keyboard shortcut - "Main key + numbers from 0-9".
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# Settings for moving the focused window between workspaces
    # To move between workspaces, use the keyboard shortcut - "Main key + Shift + numbers from 0-9".
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

# Setting to reload the configuration file
    # Usage: Settings file can be reloaded with the key combination - "Main key + Shift + C".
bindsym $mod+Shift+c reload

# Settings to reboot i3
    # Usage: i3 can be restarted in place by the key combination - "Main key + Shift + R".
bindsym $mod+Shift+r restart

# Settings to exit i3
    # Exiting i3 can be done by pressing keys - "Main key + Shift + E".
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

# Settings for resizing windows
        # Usage: Entering the resizing mode is performed by unpinning the window - floating mode and pressing the key combination - "Main key + R".
bindsym $mod+r mode "resize"
mode "resize" {
    # These bindings trigger as soon as you enter the resize mode
        # Usage:
            # To change the width of the left side of the window, press the keyboard shortcuts - "Main key + J" or "Main key + ←".
            # To change the height of the bottom side of the window, press the keyboard shortcuts - "Main key + K" or "Main key + ↓".
            # To change the height of the top side of the window, press the keyboard shortcuts - "Main key + L" or "Main key + ↑".
            # To change the width of the right side of the window, press the keyboard shortcuts - "Main key + ;" or "Main key + →".
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym semicolon resize grow width 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

    # Settings to return to normal mode
        # Usage: To enter normal mode you can do it in three ways - press Enter, press Escape, the key combination - "Main key + R"
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

# Setting to start the system bar
bar {
        status_command i3status
}